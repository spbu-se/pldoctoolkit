NAME
ldap_bind,   ldap_bind_s,   ldap_simple_bind,  ldap_simple_bind_s,  ldap_sasl_bind,  ldap_sasl_bind_s,  ldap_sasl_interactive_bind_s,  ldap_parse_sasl_bind_result,  ldap_unbind,
