LIBRARY
OpenLDAP LDAP (libldap, -lldap)

SYNOPSIS
#include &amp;lt;ldap.h&amp;gt;

int ldap_bind(LDAP *ld, const char *who, const char *cred,
int method);

int ldap_bind_s(LDAP *ld, const char *who, const char *cred,
int method);

